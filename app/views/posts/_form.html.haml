= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Author"
    = f.select :ta, ["Mindy Kaling", "Tina Fey", "Amy Poehler", "Aisha Tyler", "Wanda Sykes"]
    
  .field
    = f.label :text
    = f.text_area :text

  .actions
    = f.submit 'Save'
